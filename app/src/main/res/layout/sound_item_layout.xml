<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView android:id="@+id/iv_record"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:layout_width="90px"
        android:layout_height="100px"
        android:src="@mipmap/recording"/>

    <LinearLayout
        android:id="@+id/recorder_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ease_chatto_bg_normal"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recorder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="5px"
            android:layout_toLeftOf="@id/recorder_length"
            android:gravity="center"
            android:text="10"
            android:textColor="#ff777777"
            android:textSize="32px"/>

        <View
            android:id="@+id/id_recorder_anim"
            android:layout_width="20px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/adj"/>

    </LinearLayout>
</RelativeLayout>