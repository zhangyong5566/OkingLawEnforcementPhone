<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y_px_200"
    android:background="@mipmap/bg_card_page_silver">

    <ImageView
        android:id="@+id/main_sdv"
        android:layout_width="@dimen/x_px_100"
        android:layout_height="@dimen/x_px_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y_px_20"
        android:scaleType="centerCrop"
        android:src="@mipmap/headerimg"></ImageView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_sdv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y_px_5"
        android:text="邓桂林"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_depat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/y_px_5"
        android:text="广东水政监察局"
        android:textSize="14sp" />
</RelativeLayout>