<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:fitsSystemWindows="true">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_45"
        android:layout_margin="@dimen/y_px_10"
        android:hint="任务名称："
        android:textColorHint="@color/bottom_nav_selected">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tv_taskname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:enabled="false"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:padding="@dimen/x_px_3"
            android:textColor="#000"
            android:textSize="12sp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_01"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ll_05"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_45"
        android:layout_below="@id/ll_01"
        android:layout_margin="@dimen/x_px_10"
        android:hint="线索来源："
        android:textColorHint="@color/bottom_nav_selected">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tv_source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:enabled="false"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:padding="@dimen/x_px_3"
            android:textColor="#000"
            android:textSize="12sp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_05"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

    <LinearLayout
        android:id="@+id/ll_02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_45"
        android:layout_below="@id/ll_05"
        android:layout_marginLeft="@dimen/x_px_10"
        android:layout_marginRight="@dimen/x_px_10"
        android:layout_marginTop="@dimen/y_px_10"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="发布人："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/publisher_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="审批领导："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_approver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_02"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

    <LinearLayout
        android:id="@+id/ll_03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_45"
        android:layout_below="@id/ll_02"
        android:layout_marginLeft="@dimen/x_px_10"
        android:layout_marginRight="@dimen/x_px_10"
        android:layout_marginTop="@dimen/y_px_10"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="接收人："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_recipient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="紧急程度："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_emergency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_03"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

    <LinearLayout
        android:id="@+id/ll_04"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_45"
        android:layout_below="@id/ll_03"
        android:layout_marginLeft="@dimen/x_px_10"
        android:layout_marginRight="@dimen/x_px_10"
        android:layout_marginTop="@dimen/y_px_10"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="开始时间："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_begintime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="结束时间："
            android:textColorHint="@color/bottom_nav_selected">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_endtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/x_px_3"
                android:textColor="#000"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_04"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/ll_06"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_100"
        android:layout_below="@id/ll_04"
        android:layout_marginLeft="@dimen/x_px_10"
        android:layout_marginRight="@dimen/x_px_10"
        android:layout_marginTop="@dimen/y_px_10"
        android:hint="巡查区域："
        android:textColorHint="@color/bottom_nav_selected">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/list_item_missionDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:enabled="false"
            android:gravity="left|top"
            android:maxLines="3"
            android:padding="@dimen/x_px_3"
            android:textColor="#000"
            android:textSize="12sp" />
    </android.support.design.widget.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_06"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ll_07"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_px_100"
        android:layout_below="@id/ll_06"
        android:layout_marginLeft="@dimen/x_px_10"
        android:layout_marginRight="@dimen/x_px_10"
        android:layout_marginTop="@dimen/y_px_10"
        android:hint="任务描述："
        android:textColorHint="@color/bottom_nav_selected">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:enabled="false"
            android:gravity="left|top"
            android:padding="@dimen/x_px_3"
            android:textColor="#000"
            android:textSize="12sp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_07"
        android:layout_marginTop="@dimen/y_px_3"
        android:background="@color/login_bg"></View>

</RelativeLayout>
