<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/x_px_5"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x_px_5"
    android:background="#fff"
    android:layout_marginRight="@dimen/x_px_5">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x_px_5"
        android:padding="@dimen/x_px_5"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/tv_title"
        android:background="@android:color/darker_gray" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:layout_marginTop="@dimen/y_px_5"
        android:id="@+id/flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:paddingLeft="@dimen/x_px_10"
        android:paddingRight="@dimen/x_px_10"
        zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>
</RelativeLayout>
