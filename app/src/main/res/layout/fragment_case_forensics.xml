<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="类型："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>



                    <TextView
                        android:text="*请选择"
                        android:background="@drawable/member_item_bg2"
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="4px"
                        android:layout_weight="2"
                        android:paddingRight="5dp"
                        android:gravity="right|center_vertical"
                        android:textSize="32px"
                        />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="资源："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230px"
                    android:background="@drawable/member_item_bg2"
                    android:padding="10px">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <GridView
                            android:id="@+id/video_gridView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="5px"
                            android:numColumns="6"
                            android:verticalSpacing="5px"
                            android:visibility="invisible"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <GridView
                                android:id="@+id/sound_gridView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:numColumns="5"
                                android:scrollbars="vertical"
                                android:verticalSpacing="3px"/>

                            <!--<gd.water.oking.com.cn.wateradministration_gd.View.AudioRecordButton
                                android:id="@+id/audio_record_button"
                                android:layout_width="match_parent"
                                android:layout_height="60px"
                                android:visibility="gone"
                                android:layout_marginBottom="4px"
                                android:layout_marginLeft="20px"
                                android:layout_marginRight="20px"
                                android:layout_marginTop="4px"
                                android:background="@drawable/datetimeview_bg"
                                android:gravity="center"
                                android:minHeight="0dp"
                                android:padding="10px"
                                android:text="点击开始录音"
                                android:textColor="@color/task_other_tx" />-->


                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="证据名称："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|center_vertical"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:singleLine="true"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="证据来源："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>


                    <TextView
                        android:background="@drawable/member_item_bg2"
                        android:id="@+id/evidence_source_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="4px"
                        android:layout_weight="2"
                        android:paddingRight="5dp"
                        android:text="*请选择"
                        android:gravity="right|center_vertical"
                        android:textSize="32px"
                        />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="证据内容："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|top"
                        android:minLines="5"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="页数："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_pagerCount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|center_vertical"
                        android:inputType="numberSigned"
                        android:lines="1"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:singleLine="true"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="见证人："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_man_textView"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:singleLine="true"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="备注："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_remark_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|top"
                        android:minLines="5"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150px"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="*"
                        android:textColor="@color/colorMain7"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="采集地点："
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/member_item_bg2">

                    <EditText
                        android:id="@+id/evidence_getLocation_tv"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center"
                        android:layout_margin="10px"
                        android:background="@drawable/memo_edittext_bg"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:padding="10px"
                        android:saveEnabled="false"
                        android:singleLine="true"
                        android:textColor="@color/task_other_tx"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="单位:"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/evidence_dept_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:saveEnabled="false"
                    android:textSize="32px"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/task_other_tx"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_button"
            android:layout_width="300px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:background="@drawable/btn_waiting_selector"
            android:text="保 存"
            android:textColor="@color/colorMain6"
            android:textSize="32px"/>

        <Button
            android:id="@+id/close_button"
            android:layout_width="300px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:background="@drawable/btn_msg_selector"
            android:text="关 闭"
            android:textColor="@color/colorMain6"
            android:textSize="32px"/>
    </LinearLayout>
</LinearLayout>
