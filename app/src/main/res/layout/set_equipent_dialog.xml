<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/shape_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">






        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="筛选类型："
            android:textColor="@color/task_other_tx"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tv_01"
            android:gravity="center"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/type_spinner"
            android:background="@color/task_other_tx" />




            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/tv_01"
                android:id="@+id/canSelect_rcy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp">

            </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/save_button"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/btn_waiting_selector"
                android:text="保 存"
                android:textColor="@color/colorMain6"
                android:textSize="12sp" />

            <Button
                android:id="@+id/close_button"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/btn_msg_selector"
                android:text="关 闭"
                android:textColor="@color/colorMain6"
                android:textSize="12sp" />
        </LinearLayout>

</RelativeLayout>
