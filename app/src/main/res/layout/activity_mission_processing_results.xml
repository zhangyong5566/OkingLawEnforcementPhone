<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <Switch
        android:id="@+id/sw_leader_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从PC输入："
        android:textColor="@color/bottom_nav_selected"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_leader_summary"
        android:gravity="left|center_vertical"
        android:text="处理结果："
        android:textColor="@color/bottom_nav_selected"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/leader_summary_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_01"
        android:layout_weight="1"
        android:background="@drawable/member_item_bg2"
        android:elevation="3dp"
        android:ems="30"
        android:gravity="left|top"
        android:hint="在此处输入......"
        android:inputType="textMultiLine"
        android:minLines="10"
        android:padding="6dp"
        android:textColor="@color/task_other_tx"
        android:textColorHint="@color/task_other_tx"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leader_summary_editText"
        android:layout_marginTop="6dp"
        android:gravity="left|center_vertical"
        android:text="巡查人员："
        android:textColor="@color/bottom_nav_selected"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sign_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/leader_summary_editText"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_waiting_selector"
        android:text="签名"
        android:visibility="invisible"
        android:textColor="@color/colorMain6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/member_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_06"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textColor="@color/colorMain4"
        android:textSize="10sp" />

</RelativeLayout>