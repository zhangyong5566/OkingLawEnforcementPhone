<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/editor_enabel_bg"
    android:padding="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
    <TextView android:id="@+id/tv_menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/task_other_tx"
        android:textSize="12sp"/>

    <TextView android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/tv_menuname"
        android:layout_below="@id/tv_menuname"
        android:layout_marginTop="10dp"
        android:text="类型：菜单"
        android:textColor="@color/task_other_tx"
        android:textSize="12sp"/>

</RelativeLayout>