<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tag19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="问：我是"
        android:textColor="@color/task_other_tx"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_enforcement_name"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_tag19"
        android:maxLength="10"
        android:paddingTop="8dp"
        android:textColor="@color/task_other_tx"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_tag20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/et_enforcement_name"
        android:text="执法人员，现在我需要问一些问题，你要如实回答。"
        android:textColor="@color/task_other_tx"
        android:textSize="12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_enforcement_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>