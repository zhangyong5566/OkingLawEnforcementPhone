<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_ask_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="住址：广东省"
        android:textColor="@color/colorBackground"
        android:textSize="12sp"
        />

    <TextView android:id="@+id/tv_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ask_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="答："
        android:textColor="@color/colorBackground"
        android:textSize="12sp"
        />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ask_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/tv_tag1"
        android:orientation="horizontal">
        <EditText android:id="@+id/et_answer_content"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:maxLength="50"
            android:paddingTop="8dp"
            android:textColor="@color/task_other_tx"
            android:textSize="12sp"/>
        <ImageView android:layout_width="20dp"
            android:id="@+id/iv_record"
            android:visibility="gone"
            android:layout_height="20dp"
            android:src="@drawable/ease_chatting_setmode_voice_btn"/>
    </LinearLayout>
</RelativeLayout>