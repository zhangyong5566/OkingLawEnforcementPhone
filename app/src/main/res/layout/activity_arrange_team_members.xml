<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@mipmap/back"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="队员安排"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="任务名称：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/list_item_missionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:padding="3dp"
                    android:enabled="false"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="任务状态：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/list_item_missionState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="发布人：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/publisher_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="审批人：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/approved_person_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:enabled="false"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="开始时间：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/begin_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:enabled="false"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="结束时间：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/list_item_missionDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="任务性质：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mission_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:enabled="false"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="10dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="成员：">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/list_item_missionMember"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:textColor="@color/colorAccent"
                        android:gravity="left|center_vertical"
                        android:maxLines="3"
                        android:enabled="false"
                        android:padding="3dp"
                        android:textSize="12sp"/>
                </android.support.design.widget.TextInputLayout>
                <Switch android:id="@+id/sw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="不需要队员"
                        android:textColor="@color/top_tab_textcolor_normal"
                        android:textSize="30px"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="巡查区域：">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/list_item_missionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="3"
                    android:enabled="false"
                    android:padding="3dp"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:background="@color/login_bg"></View>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="30dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:layout_marginTop="15dp"
                          android:orientation="horizontal">
                <Button
                    android:id="@+id/list_item_missionRecord"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/task_input_height"
                    android:layout_below="@id/ll_07"
                    android:layout_weight="1"
                    android:background="@drawable/btn_waiting_selector"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/task_input_textsize"/>
                <Button
                    android:id="@+id/bt_getmember"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/task_input_height"
                    android:layout_below="@id/ll_07"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_addevidence_selector"
                    android:gravity="center"
                    android:text="获取队员"
                    android:textColor="@color/white"
                    android:textSize="@dimen/task_input_textsize"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
